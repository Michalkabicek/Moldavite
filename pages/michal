import React, { useState } from "react";

export default function Home() {
  const [entries, setEntries] = useState([]);
  const [newEntry, setNewEntry] = useState({ image: "", title: "", location: "", description: "" });

  const handleAddEntry = () => {
    if (newEntry.image && newEntry.title && newEntry.location) {
      setEntries([...entries, { ...newEntry, id: Date.now() }]);
      setNewEntry({ image: "", title: "", location: "", description: "" });
    }
  };

  return (
    <div style={{ padding: "20px", fontFamily: "sans-serif" }}>
      <h1>Moldavite-Cert 0.1 ğŸŒ</h1>
      <p><strong>Michal KabÃ­Äek</strong> â€“ sbÄ›ratel, geolog, certifikÃ¡tor âœ…</p>

      <div style={{ marginTop: "20px" }}>
        <h2>PÅ™idat novÃ½ nÃ¡lez</h2>
        <input placeholder="URL fotky vltavÃ­nu" value={newEntry.image} onChange={(e) => setNewEntry({ ...newEntry, image: e.target.value })} /><br />
        <input placeholder="NÃ¡zev nÃ¡lezu" value={newEntry.title} onChange={(e) => setNewEntry({ ...newEntry, title: e.target.value })} /><br />
        <input placeholder="Lokalita" value={newEntry.location} onChange={(e) => setNewEntry({ ...newEntry, location: e.target.value })} /><br />
        <textarea placeholder="Popis nÃ¡lezu" value={newEntry.description} onChange={(e) => setNewEntry({ ...newEntry, description: e.target.value })} /><br />
        <button onClick={handleAddEntry}>PÅ™idat nÃ¡lez</button>
      </div>

      <div style={{ marginTop: "30px" }}>
        {entries.map((entry) => (
          <div key={entry.id} style={{ border: "1px solid #ccc", margin: "10px 0", padding: "10px" }}>
            <img src={entry.image} alt="vltavÃ­n" style={{ maxWidth: "100%" }} />
            <h3>{entry.title}</h3>
            <p>Lokalita: {entry.location}</p>
            <p>Popis: {entry.description}</p>
            <p><strong>Certifikace: Michal KabÃ­Äek</strong></p>
          </div>
        ))}
      </div>
    </div>
  );
}
